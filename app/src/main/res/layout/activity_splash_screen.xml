<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".splashScreenActivity">

    <ImageView


        android:id="@+id/iv_note"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_baseline_music_note_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/iv_note"
        android:layout_alignTop="@+id/iv_note"
        android:layout_alignEnd="@+id/iv_note"
        android:layout_alignBottom="@+id/iv_note"
        android:layout_marginStart="75dp"
        android:layout_marginTop="262dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="-81dp"
        android:allowUndo="true"
        android:text="My Tube"
        android:textColor="#F30606"
        android:textColorLink="#F30606"
        android:textSize="24sp"
        android:visibility="visible"
        app:autoSizeTextType="uniform"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="92dp"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-52dp"
        android:layout_marginEnd="-138dp"
        android:layout_marginBottom="-34dp"
        android:text="Developed by HenrikoHill"
        android:visibility="visible" />


</RelativeLayout>